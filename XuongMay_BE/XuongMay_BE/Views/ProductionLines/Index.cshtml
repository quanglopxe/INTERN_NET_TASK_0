@model IEnumerable<XuongMay_BE.Data.ProductionLine>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supervisor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor.SupervisorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LineID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LineID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LineID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
